@model DeliveryStore
@{
    ViewBag.Title = "Create Delivery Store";
}


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center" style="color:blue">
                <h1>Create New FSA</h1>
            </div>
            <div class="card-body text-center">
                <form asp-controller="Home" asp-action="Create" method="post" class="mt-3">

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="FSA"></label>
                            <input class="form-control" asp-for="FSA" />
                            <span asp-validation-for="FSA" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="StoreNumber"></label>
                            <input class="form-control" asp-for="StoreNumber" />
                            <span asp-validation-for="StoreNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DeliveryVendorId"></label>
                            <input class="form-control" asp-for="DeliveryVendorId" />
                            <span asp-validation-for="DeliveryVendorId" class="text-danger"></span>
                        </div>
                        <div  class="form-group col-md-6">
                            <label asp-for="DeliveryVendorName"></label>
                            <input class="form-control" asp-for="DeliveryVendorName" />
                            <span asp-validation-for="DeliveryVendorName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DeliveryFeePLU"></label>
                            <input class="form-control" asp-for="DeliveryFeePLU" />
                            <span asp-validation-for="DeliveryFeePLU" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DeliveryFeePromo"></label>
                            <input class="form-control" asp-for="DeliveryFeePromo" />
                            <span asp-validation-for="DeliveryFeePromo" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ClientCode"></label>
                            <input class="form-control" asp-for="ClientCode" />
                            <span asp-validation-for="ClientCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="card-footer  flex-row justify-content-between text-center">
                        <button class="btn btn-primary" type="submit">Create</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>